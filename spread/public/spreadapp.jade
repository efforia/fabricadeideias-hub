.modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
        h3#myModalLabel Espalhe
.modal-body(style='background-color: #00A946;')
        .btn-group(data-toggle='buttons-radio', style='text-align: center;')
                button.btn.option.active(href='spread',next='postspread') Postagem
                button.btn.option(href='calendar',next='eventspread') Evento
                button.btn.option(href='contents',next='videospread') Vídeo
                button.btn.option(href='images',next='listspread') Imagem
                button.btn.option(href='schedule',next='listspread') Lista
        .form(style='margin-top: 10px;')
.modal-footer
        button.btn(data-dismiss='modal', aria-hidden='true') Cancelar
        button.btn.btn-primary.send.postspread(data-loading-text='Espalhando...') Espalhar
